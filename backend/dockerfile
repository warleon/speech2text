FROM ghcr.io/opennmt/ctranslate2:4.4.0-ubuntu20.04-cuda12.2

# Set working directory
WORKDIR /app

# Install system dependencies in one layer and clean up
RUN apt-get update && \
    apt-get install -y --no-install-recommends ffmpeg && \
    rm -rf /var/lib/apt/lists/*

# Install Python dependencies (grouped for fewer layers)
# Upgrade pip before installing
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir whisperx && \
    pip install --no-cache-dir --upgrade transformers

# Install app-specific dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY models.py .

# Pass Hugging Face token as build arg and set as env
ARG HUGGING_FACE_TOKEN
ENV HUGGING_FACE_TOKEN=${HUGGING_FACE_TOKEN}

# Set CTranslate2 model cache directory
ENV CTRANSLATE2_CACHE_DIR=/app/models

# Download model at build time
RUN python3 models.py --model=large-v2

RUN apt-get update && \
    apt-get install -y curl && \
    rm -rf /var/lib/apt/lists/*

ENTRYPOINT []